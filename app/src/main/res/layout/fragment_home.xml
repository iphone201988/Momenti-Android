<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bean"
            type="com.tech.momenti.data.model.GetProfileApiResponse.User" />
        <variable
            name="vm"
            type="com.tech.momenti.ui.home_screen.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home_screen.home.HomeFragment">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:src="@drawable/iv_profile_icon"
                    app:strokeColor="@color/gray"
                    android:layout_marginStart="@dimen/_20sdp"
                    app:strokeWidth="1dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:onClick="@{v -> vm.onClick(v)}"
                    android:src="@drawable/iv_notification_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profileIcon"
                    app:layout_constraintBottom_toBottomOf="@id/profileIcon"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/personName"
                    style="@style/Textview_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{bean.name}"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/yellow"
                    app:layout_constraintTop_toBottomOf="@id/profileIcon"
                    app:layout_constraintStart_toStartOf="parent"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTodayTask"
                    style="@style/TextView_400_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todayâ€™s Task"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintTop_toBottomOf="@id/personName"
                    app:layout_constraintStart_toStartOf="@id/personName"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    tools:listitem="@layout/item_day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTodayTask"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consTrack"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_gradient_yellow"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@id/consStreak"
                    app:layout_constraintTop_toBottomOf="@id/rvCalendar"
                    app:layout_constraintStart_toStartOf="@id/profileIcon">


                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circularProgressBar"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cpb_background_progressbar_color="@color/app_black"
                        app:cpb_progressbar_color="@color/white"
                        app:cpb_progressbar_width="6dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:cpb_background_progressbar_width="6dp"
                        app:cpb_round_border="true"
                        app:cpb_progress="30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%30"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:layout_constraintTop_toTopOf="@id/circularProgressBar"
                        app:layout_constraintBottom_toBottomOf="@id/circularProgressBar"
                        app:layout_constraintStart_toStartOf="@id/circularProgressBar"
                        app:layout_constraintEnd_toEndOf="@id/circularProgressBar" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTaskDes"
                        style="@style/TextView_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Your daily goals almost done!"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:layout_constraintTop_toTopOf="@id/circularProgressBar"
                        app:layout_constraintStart_toEndOf="@id/circularProgressBar"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2 of 5 completed"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:layout_constraintBottom_toBottomOf="@id/circularProgressBar"
                        app:layout_constraintStart_toStartOf="@id/tvTaskDes"
                        app:layout_constraintEnd_toEndOf="@id/tvTaskDes"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consStreak"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_streks"
                    android:backgroundTint="@color/app_black"
                    app:layout_constraintTop_toTopOf="@id/consTrack"
                    app:layout_constraintBottom_toBottomOf="@id/consTrack"
                    app:layout_constraintEnd_toEndOf="@id/ivNotification"
                    app:layout_constraintStart_toEndOf="@id/consTrack">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStreaks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Streaks"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/iv_fire"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintTop_toTopOf="@id/tvStreaks"
                        app:layout_constraintBottom_toBottomOf="@id/tvStreaks"
                        app:layout_constraintEnd_toStartOf="@id/tvStreaks"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date"
                        style="@style/TextView_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvStreaks"
                        app:layout_constraintBottom_toTopOf="@id/days"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/days"
                        style="@style/TextView_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/view_line"
                    app:layout_constraintTop_toBottomOf="@id/consTrack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/viewLine"
                    app:layout_constraintStart_toStartOf="@id/profileIcon"
                    app:layout_constraintEnd_toEndOf="@id/ivNotification">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTaskList"
                        style="@style/TextView_500_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/app_black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Today Task List"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTasks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTaskList"
                        tools:listitem="@layout/item_layout_swipe" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGratitude"
                        style="@style/TextView_500_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gratitude"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="@id/rvTasks"
                        app:layout_constraintTop_toBottomOf="@id/rvTasks"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/viewAll"
                        style="@style/TextView_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW ALL"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/yellow"
                        app:layout_constraintEnd_toEndOf="@id/rvTasks"
                        app:layout_constraintTop_toTopOf="@id/tvGratitude"
                        app:layout_constraintBottom_toBottomOf="@id/tvGratitude"/>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/bg_gradient_yellow"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="@id/tvGratitude"
                        app:layout_constraintEnd_toEndOf="@id/viewAll"
                        app:layout_constraintTop_toBottomOf="@id/tvGratitude">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWhatGratefulToday"
                            style="@style/TextView_500_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/app_black"
                            android:text="@string/what_are_you_grateful_for_today"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/listThings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:text="@string/list_3_5_things_you_re_grateful_for_today"
                            android:textColor="@color/gray"
                            app:layout_constraintTop_toBottomOf="@id/tvWhatGratefulToday"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>


                        <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/addBtn"
                        style="@style/Textview_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:onClick="@{v -> vm.onClick(v)}"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:textSize="@dimen/_14ssp"
                        android:background="@drawable/date_bg"
                        android:backgroundTint="@color/app_black"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consAddTask"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_350sdp"
                    app:layout_constraintTop_toBottomOf="@id/rvCalendar"
                    app:layout_constraintStart_toStartOf="@id/profileIcon"
                    app:layout_constraintEnd_toEndOf="@id/ivNotification">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivAddTaskImage"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:src="@drawable/iv_add_task_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_30sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvYouCanAdd"
                        style="@style/TextView_400_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="center"
                        android:text="@string/you_can_add_task_for_future_days_we_will_notify_you"
                        app:layout_constraintTop_toBottomOf="@id/ivAddTaskImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAddTaskFor"
                        style="@style/TextView_400_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_task_for"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="@id/tvYouCanAdd"
                        app:layout_constraintEnd_toEndOf="@id/tvYouCanAdd"
                        app:layout_constraintTop_toBottomOf="@id/tvYouCanAdd"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/taskDate"
                        style="@style/TextView_SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16, Feb 2025"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/yellow"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintTop_toBottomOf="@id/tvAddTaskFor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAddTask"
                        android:layout_width="0dp"
                        style="@style/TextView_400_Regular"
                        android:layout_height="wrap_content"
                        android:text="@string/add_task"
                        android:onClick="@{v -> vm.onClick(v)}"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/white"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center"
                        android:background="@drawable/button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/taskDate"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

