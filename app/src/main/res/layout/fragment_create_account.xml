<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tech.momenti.ui.auth.AuthCommonVM" />
    </data>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.signup.CreateAccountFragment">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appName"
            style="@style/TextView_600_SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/momenti"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/createAccount"
            style="@style/TextView_400_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_black"
            android:textSize="@dimen/_20ssp"
            android:text="Create New Account"
            android:layout_marginTop="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/set_up_your_username_password_you_can_change_it_later"
            app:layout_constraintTop_toBottomOf="@id/createAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consMain"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/des"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etName"
                    style="@style/TextView_400_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Enter Name"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmail"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Enter Email"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/etName"
                    app:layout_constraintStart_toStartOf="@id/etName"
                    app:layout_constraintEnd_toEndOf="@id/etName"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPassword"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Enter Password"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/etEmail"
                    app:layout_constraintStart_toStartOf="@id/etEmail"
                    app:layout_constraintEnd_toEndOf="@id/etEmail"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/showPassword"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/iv_hide_eye"
                    android:onClick="@{v -> vm.onClick(v)}"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@id/etPassword"
                    app:layout_constraintBottom_toBottomOf="@id/etPassword"
                    app:layout_constraintEnd_toEndOf="@id/etPassword"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/signUpBtn"
                    android:layout_width="0dp"
                    style="@style/TextView_400_Regular"
                    android:layout_height="wrap_content"
                    android:text="Signup"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:onClick="@{v -> vm.onClick(v)}"
                    android:background="@drawable/button_bg"
                    app:layout_constraintStart_toStartOf="@id/etPassword"
                    app:layout_constraintEnd_toEndOf="@id/etPassword"
                    app:layout_constraintTop_toBottomOf="@id/etPassword"/>


                <View
                    android:id="@+id/viewLine1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@color/yellow"
                    app:layout_constraintEnd_toEndOf="@id/signUpBtn"
                    app:layout_constraintStart_toStartOf="@id/signUpBtn"
                    app:layout_constraintTop_toBottomOf="@id/signUpBtn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOrWith"
                    style="@style/TextView_400_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:text="OR CONTINUE WITH"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@id/viewLine1"
                    app:layout_constraintEnd_toEndOf="@id/viewLine1"
                    app:layout_constraintStart_toStartOf="@id/viewLine1"
                    app:layout_constraintTop_toTopOf="@id/viewLine1" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consApple"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/button_bg"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:backgroundTint="@color/light_gray"
                    app:layout_constraintEnd_toStartOf="@id/consGoogle"
                    app:layout_constraintStart_toStartOf="@id/signUpBtn"
                    app:layout_constraintTop_toBottomOf="@id/viewLine1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appleLogin"
                        style="@style/TextView_500_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apple"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/iv_apple_icon"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:layout_constraintEnd_toStartOf="@id/appleLogin"
                        app:layout_constraintTop_toTopOf="@id/appleLogin"
                        app:layout_constraintBottom_toBottomOf="@id/appleLogin"/>
                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consGoogle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/button_bg"
                    app:layout_constraintStart_toEndOf="@id/consApple"
                    android:backgroundTint="@color/light_gray"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@id/signUpBtn"
                    app:layout_constraintTop_toTopOf="@id/consApple"
                    app:layout_constraintBottom_toBottomOf="@id/consApple">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/googleLogin"
                        style="@style/TextView_500_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/app_black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/iv_google_log"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:layout_constraintEnd_toStartOf="@id/googleLogin"
                        app:layout_constraintTop_toTopOf="@id/googleLogin"
                        app:layout_constraintBottom_toBottomOf="@id/googleLogin"/>



                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dontHaveAccount"
                    style="@style/TextView_400_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="@id/signUpBtn"
                    app:layout_constraintEnd_toEndOf="@id/signUpBtn"
                    app:layout_constraintTop_toBottomOf="@id/consApple"
                    android:text="Already have an account?"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/signUp"
                    style="@style/TextView_500_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/yellow"
                    app:layout_constraintStart_toEndOf="@id/dontHaveAccount"
                    app:layout_constraintTop_toTopOf="@id/dontHaveAccount"
                    app:layout_constraintBottom_toBottomOf="@id/dontHaveAccount"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.core.widget.NestedScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>