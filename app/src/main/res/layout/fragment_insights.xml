<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tech.momenti.ui.home_screen.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home_screen.insights.InsightsFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading"
            style="@style/TextView_400_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insights"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="@id/ivNotification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivNotification"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:onClick="@{v -> vm.onClick(v)}"
            android:src="@drawable/iv_notification_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consStreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_streks"
            android:backgroundTint="@color/app_black"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivStreak"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/iv_fire"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/streak"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/streak"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toTopOf="@id/ivStreak"
                app:layout_constraintStart_toEndOf="@id/ivStreak"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDes"
                style="@style/TextView_Medium"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:text="Youâ€™ve completed 7 days in a row! Keep it up"
                app:layout_constraintTop_toBottomOf="@id/streak"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/streak"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvThisWeek"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This week"
            android:textColor="@color/app_black"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@id/consStreak"
            app:layout_constraintStart_toStartOf="parent"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            style="@style/TextView_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sep 7 - Sep 14"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/yellow"
            app:layout_constraintTop_toBottomOf="@id/tvThisWeek"
            app:layout_constraintStart_toStartOf="parent"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toTopOf="@id/tvThisWeek"
            app:layout_constraintBottom_toBottomOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/iv_share"
                app:tint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvShare"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/ivShare"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/ivShare"
                app:layout_constraintBottom_toBottomOf="@id/ivShare"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consSummmery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:background="@drawable/radius_border_gray"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTaskSummery"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task summary"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_black"
                app:layout_constraintTop_toTopOf="@id/dropDown"
                app:layout_constraintBottom_toBottomOf="@id/dropDown"
                app:layout_constraintStart_toStartOf="parent"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dropDown"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/iv_down_arrow"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_drop_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalTaskAdded"
                style="@style/TextView_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_task_added"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/tvTaskSummery"
                app:layout_constraintStart_toStartOf="@id/tvTaskSummery"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etTotalTask"
                style="@style/TextView_SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/app_black"
                app:layout_constraintTop_toBottomOf="@id/tvTotalTaskAdded"
                app:layout_constraintStart_toStartOf="@id/tvTotalTaskAdded"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTaskWon"
                style="@style/TextView_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Won"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/etTotalTask"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etTaskWon"
                style="@style/TextView_SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/tvTaskWon"
                app:layout_constraintStart_toStartOf="parent"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/verticalGuideLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSkippedDays"
                style="@style/TextView_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skipped Days"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/verticalGuideLine"
                app:layout_constraintTop_toTopOf="@id/tvTotalTaskAdded"
                app:layout_constraintBottom_toBottomOf="@id/tvTotalTaskAdded"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etSkippedDays"
                style="@style/TextView_SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/tvSkippedDays"
                app:layout_constraintStart_toStartOf="@id/tvSkippedDays"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTaskLoss"
                style="@style/TextView_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Loss"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintTop_toTopOf="@id/tvTaskWon"
                app:layout_constraintBottom_toBottomOf="@id/tvTaskWon"
                app:layout_constraintStart_toStartOf="@id/verticalGuideLine"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etTaskLoss"
                style="@style/TextView_SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/tvTaskLoss"
                app:layout_constraintStart_toStartOf="@id/tvTaskLoss"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLifeBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:background="@drawable/radius_border_gray"
            app:layout_constraintTop_toBottomOf="@id/consSummmery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLifeBalanceInsight"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/life_balance_insight"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/dropDownLifeBalance"
                app:layout_constraintBottom_toBottomOf="@id/dropDownLifeBalance"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dropDownLifeBalance"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/iv_down_arrow"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_drop_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLifeBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/dropDownLifeBalance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consGratitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:background="@drawable/radius_border_gray"
            app:layout_constraintTop_toBottomOf="@id/consLifeBalance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dropDownGratitude"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/iv_down_arrow"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_drop_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGratitudeSummary"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gratitude_summary"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/dropDownGratitude"
                app:layout_constraintBottom_toBottomOf="@id/dropDownGratitude"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEntriesThisWeek"
                style="@style/TextView_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entries_this_week"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/tvGratitudeSummary"
                app:layout_constraintStart_toStartOf="@id/tvGratitudeSummary"/>



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etEntries"
                style="@style/TextView_SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/app_black"
                app:layout_constraintTop_toBottomOf="@id/tvEntriesThisWeek"
                app:layout_constraintStart_toStartOf="@id/tvEntriesThisWeek"/>



            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/verticalGuideLineSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSkipped"
                style="@style/TextView_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skipped_days"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/verticalGuideLineSummary"
                app:layout_constraintTop_toTopOf="@id/tvEntriesThisWeek"
                app:layout_constraintBottom_toBottomOf="@id/tvEntriesThisWeek"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etSkipped"
                style="@style/TextView_SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/tvSkipped"
                app:layout_constraintStart_toStartOf="@id/tvSkipped"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/aiCoachBtn"
            android:layout_width="0dp"
            style="@style/Textview_Regular"
            android:layout_height="wrap_content"
            android:text="@string/your_ai_coach"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_14ssp"
            android:onClick="@{v -> vm.onClick(v)}"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/button_bg"
            app:layout_constraintStart_toStartOf="@id/consGratitude"
            app:layout_constraintEnd_toEndOf="@id/consGratitude"
            app:layout_constraintTop_toBottomOf="@id/consGratitude"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>