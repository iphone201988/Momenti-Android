<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tech.momenti.ui.share.ShareFragmentVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.share.ShareFragment">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:src="@drawable/iv_back"
            android:onClick="@{v -> vm.onClick(v)}"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading"
            style="@style/TextView_400_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_with_friends"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"/>


       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tvMessagePreview"
           style="@style/Textview_Regular"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_20sdp"
           android:textSize="@dimen/_12ssp"
           android:textColor="@color/app_black"
           android:text="@string/message_preview_when_your_share_it_with_friends"
           app:layout_constraintTop_toBottomOf="@id/ivBack"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10ssp"
            android:background="@drawable/radius_border_gray"
            app:layout_constraintTop_toBottomOf="@id/tvMessagePreview"
            app:layout_constraintStart_toStartOf="@id/tvMessagePreview"
            app:layout_constraintEnd_toEndOf="@id/tvMessagePreview">
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeyMoment"
                style="@style/Textview_Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:text="Hey! Iâ€™ve been using MOMENTI to track my wins &amp; gratitude daily. Join me and letâ€™s grow together!"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProgress"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My MOMENTI Progress:"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/app_black"
                app:layout_constraintTop_toBottomOf="@id/tvHeyMoment"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/streak"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="ðŸ”¥ 10-Day Streak"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_black"
                app:layout_constraintTop_toBottomOf="@id/tvProgress"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWinsToday"
                style="@style/Textview_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="âœ… 5/5 Task Wins Today"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/app_black"
                app:layout_constraintTop_toBottomOf="@id/streak"
                app:layout_constraintStart_toStartOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShare"
            android:layout_width="0dp"
            style="@style/Textview_Regular"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:onClick="@{v -> vm.onClick(v)}"
            android:background="@drawable/button_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/consMain"
            app:layout_constraintStart_toStartOf="@id/consMain"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>