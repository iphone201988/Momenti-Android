<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tech.momenti.ui.auth.AuthCommonVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".ui.auth.signup.DailyTaskFragment">


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:src="@drawable/iv_back"
        android:onClick="@{v -> vm.onClick(v)}"

        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appName"
        style="@style/TextView_600_SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/momenti"
        android:textColor="@color/app_black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/powerList"
        style="@style/TextView_400_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_black"
        android:textSize="@dimen/_20ssp"
        android:text="Todayâ€™s Power List"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Add up to 5 key task to win your day"
        app:layout_constraintTop_toBottomOf="@id/powerList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consMain"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/des"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etFocusArea"
                    style="@style/TextView_400_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Focus Area(choose one to start)"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/iv_dorp_down"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@id/etFocusArea"
                    app:layout_constraintBottom_toBottomOf="@id/etFocusArea"
                    app:layout_constraintEnd_toEndOf="@id/etFocusArea"/>

                <ImageView
                    android:id="@+id/imageOne"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/iv_image_one"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/etFocusArea"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddTaskOne"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="Add task"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@id/imageOne"
                    app:layout_constraintTop_toTopOf="@id/imageOne"
                    app:layout_constraintStart_toEndOf="@id/imageOne"
                    app:layout_constraintEnd_toEndOf="@id/etFocusArea"/>



                <ImageView
                    android:id="@+id/imageTwo"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/iv_image_two"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/etAddTaskOne"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddTaskTwo"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="Add task"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@id/imageTwo"
                    app:layout_constraintTop_toTopOf="@id/imageTwo"
                    app:layout_constraintStart_toEndOf="@id/imageTwo"
                    app:layout_constraintEnd_toEndOf="@id/etAddTaskOne"/>


                <ImageView
                    android:id="@+id/imageThree"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/iv_image_three"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/etAddTaskTwo"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddTaskThree"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="Add task"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@id/imageThree"
                    app:layout_constraintTop_toTopOf="@id/imageThree"
                    app:layout_constraintStart_toEndOf="@id/imageThree"
                    app:layout_constraintEnd_toEndOf="@id/etAddTaskOne"/>


                <ImageView
                    android:id="@+id/imageFour"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/iv_image_four"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/etAddTaskThree"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddTaskFour"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="Add task"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@id/imageFour"
                    app:layout_constraintTop_toTopOf="@id/imageFour"
                    app:layout_constraintStart_toEndOf="@id/imageFour"
                    app:layout_constraintEnd_toEndOf="@id/etAddTaskOne"/>


                <ImageView
                    android:id="@+id/imageFive"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/iv_image_five"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/etAddTaskFour"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddTaskFive"
                    style="@style/TextView_400_Regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/radius_border_gray"
                    android:gravity="start|center"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="Add task"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@id/imageFive"
                    app:layout_constraintTop_toTopOf="@id/imageFive"
                    app:layout_constraintStart_toEndOf="@id/imageFive"
                    app:layout_constraintEnd_toEndOf="@id/etAddTaskOne"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/saveBtn"
                    android:layout_width="0dp"
                    style="@style/Textview_Regular"
                    android:layout_height="wrap_content"
                    android:text="Save &amp; Continue"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:onClick="@{v -> vm.onClick(v)}"
                    android:background="@drawable/button_bg"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"
                    app:layout_constraintEnd_toEndOf="@id/etFocusArea"
                    app:layout_constraintTop_toBottomOf="@id/etAddTaskFive"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consBottom"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/bottom_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/saveBtn"
                    app:layout_constraintStart_toStartOf="@id/etFocusArea"
                    app:layout_constraintEnd_toEndOf="@id/etFocusArea">

                    <ImageView
                        android:id="@+id/bulb"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/iv_bulb"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text"
                        style="@style/TextView_400_Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:singleLine="true"
                        android:text="Focus on actions that truly move you forward."
                        android:textColor="@color/app_black"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:layout_constraintStart_toEndOf="@id/bulb"
                        app:layout_constraintTop_toTopOf="@id/bulb"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/bulb"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>